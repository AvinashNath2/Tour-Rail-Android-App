<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#ffff"
        android:id="@+id/train_name"
        android:gravity="center"
        android:textSize="30dp"
        android:text="TRAIN NAME"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#000000"
        android:id="@+id/train_no"
        android:gravity="center"
        android:textSize="20dp"
        android:text="TRAIN NO."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20dp"
            android:text="DELAY"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:padding="5dp"
        android:background="#ff4c4c"
        android:textColor="#ffff"
        android:id="@+id/train_delay"
        android:gravity="center"
        android:textSize="20dp"
        android:text="DELAY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20dp"
            android:text="    SCH. ARRIVAL"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffff"
            android:id="@+id/sch_arrival"
            android:gravity="center"
            android:textSize="20dp"
            android:text="SC. ARRIVAl"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20dp"
            android:text="SCH. DEPARTURE"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffff"
            android:id="@+id/sch_departure"
            android:gravity="center"
            android:textSize="20dp"
            android:text="SC. DEP"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="20dp"
                android:text="    AC. ARRIVAL"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:padding="5dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffff"
                android:id="@+id/ach_arrival"
                android:gravity="center"
                android:textSize="20dp"
                android:text="AC. ARRIVAl"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="20dp"
                android:text="AC.    DEPARTURE"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:padding="5dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffff"
                android:id="@+id/ach_departure"
                android:gravity="center"
                android:textSize="20dp"
                android:text="AC. DEP"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>